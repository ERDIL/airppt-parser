{
  "compilerOptions": {
    "outDir": "./js",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "./ts",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@models/*": ["models/*"],
      "@generators/*": ["generators/*"],
      "@renderers/*": ["renderers/*"]
    },
    "declaration": true
  },
  "include": ["./ts/**/*"]
}
